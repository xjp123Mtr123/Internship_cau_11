/* Global container */
.container {
  display: flex;
  flex-direction: column;
  background-color: #f0f4f7; /* Set the background color similar to the provided design */
  margin: 0; /* Remove default margins */
}

/* Swiper styles */
.swiper {
  width: 100%; /* Swiper takes the full width */
  height: 200px; /* Adjust the height as needed */
  margin-top: 0; /* No space between the swiper and the top of the screen */
}

.slide-image {
  width: 100%;
  height: 100%;
}


/* Buttons grid */
.button-grid {
  width: calc(100% - 40px); /* Full width minus padding on both sides */
  margin: 20px; /* Margin to the sides of the screen */
}

/* Individual button */
.grid-button {
  background-color: #ffffff; /* Button background color */
  margin-bottom: 10px; /* Space between buttons */
  padding: 20px;
  border-radius: 10px; /* Rounded corners for buttons */
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); /* Shadow for buttons */
  font-size: 16px;
  color: #333; /* Button text color */
  display: block; /* Make the button block level so it takes a full row */
  text-align: center; /* Center button text */
}


/* Button content for icon and text alignment */
.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Icon style */
.icon {
  width: 40px; /* Adjust icon size as needed */
  height: 40px; /* Adjust icon size as needed */
  margin-right: 20px; /* Space between icon and text */
}

/* Style for logout button specifically */
.logout-button {
  background-color: #f44336; /* Logout button background color */
  color: white; /* Logout button text color */
}
