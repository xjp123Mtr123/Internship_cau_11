<view class='container'>
  <view class='register-box'>
    <view class='register-title'>用户注册</view>
    <input class='input-field' bindinput='inputName' placeholder='用户名' name='name' type='text'/>
    <input class='input-field' bindinput='inputPassword' placeholder='密码' name='password' type='password'/>
    <input class='input-field' bindinput='inputPhone' placeholder='手机号码' name='phone' type='number'/>
    <input class='input-field' bindinput='inputEmail' placeholder='邮箱' name='email' type='email'/>
    <button class='register-btn' bindtap='register'>注册</button>
  </view>
</view>
