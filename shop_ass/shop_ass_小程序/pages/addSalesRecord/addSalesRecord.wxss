.container {
  padding: 20px;
}
.search-bar {
  display: flex;
  margin-bottom: 20px;
}
search-input {
  flex-grow: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.search-btn {
  width: 80px;
  margin-left: 10px;
  background-color: #1e88e5;
  color: white;
  border: none;
  border-radius: 4px;
}

.input-group {
  margin-bottom: 15px;
}

.input-group text {
  display: inline-block;
  width: 80px;
}

.input-field {
  width: calc(100% - 90px);
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.submit-btn {
  width: 100%;
  background-color: #1e88e5;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 4px;
}
