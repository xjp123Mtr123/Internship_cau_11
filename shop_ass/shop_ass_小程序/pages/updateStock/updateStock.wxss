.container {
  padding: 20px;
}

.form-group {
  margin-bottom: 20px;
}

.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.input-group text {
  width: 60px;
}

.input-group input {
  flex-grow: 1;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.submit-btn {
  width: 100%;
  background-color: #1e88e5;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 4px;
}
