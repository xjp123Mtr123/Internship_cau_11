<view class="container">
  <view class="input-group">
    <text>用户名：</text>
    <input class="input-field" type="text" placeholder="用户名" bindinput="inputName" value="{{name}}" disabled="true"/>
  </view>
  <view class="input-group">
    <text>手机号：</text>
    <input class="input-field" type="text" placeholder="手机号" bindinput="inputPhone" value="{{phone}}" />
  </view>
  <view class="input-group">
    <text>邮箱：</text>
    <input class="input-field" type="text" placeholder="邮箱" bindinput="inputEmail" value="{{email}}" />
  </view>
  <view class="input-group">
    <text>若要修改信息请输入密码：</text>
    <input class="input-field" type="password" placeholder="密码" bindinput="inputPassword" />
  </view>
  <view class="input-group">
    <text>新密码（非必填）：</text>
    <input class="input-field" type="password" placeholder="新密码" bindinput="inputNewPassword" />
  </view>
  <button class="submit-btn" bindtap="updateUserInfo">更新信息</button>
</view>
