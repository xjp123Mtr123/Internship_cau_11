.container {
  padding: 20px;
}

.input-group {
  margin-bottom: 15px;
}

.input-group text {
  display: inline-block;
  width: 80px;
}

.input-field {
  width: calc(100% - 90px);
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.submit-btn {
  width: 100%;
  background-color: #1e88e5;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 4px;
}
