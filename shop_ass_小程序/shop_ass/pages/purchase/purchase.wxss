.container {
  padding: 10px;
}

.search-bar {
  display: flex;
  margin-bottom: 20px;
}

.search-input {
  flex-grow: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.search-btn {
  width: 80px;
  margin-left: 10px;
  background-color: #1e88e5;
  color: white;
  border: none;
  border-radius: 4px;
}

.list-container {
  margin-bottom: 20px;
}

.list-item {
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 4px;
  margin-bottom: 10px;
}

.item-row {
  display: flex;
  margin-bottom: 5px;
}

.item-label {
  color: #888;
  width: 100px;
}

.item-value {
  color: #333;
  flex-grow: 1;
}

.add-btn {
  width: 100%;
  background-color: #ff4081;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 4px;
}
